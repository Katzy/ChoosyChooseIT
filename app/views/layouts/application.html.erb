<!DOCTYPE html>
<html>
<head>
  <title>ChoosyChooseIT</title>
  <script>
      var ChoosyChooseIT = {};
      ChoosyChooseIT.config = { facebookAppId: "<%= ENV['FACEBOOK_APP_ID'] %>" };
  </script>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>



  <%= render partial: "shared/header", locals: { user: @user } %>

  <% if flash[:notice] %>
    <p class="notice"><%= flash[:notice] %></p>
  <% end %>

  <% if flash[:alert] %>
    <p class="alert"><%= flash[:alert] %></p>
  <% end %>


 <%= yield %>

<%= render partial: "shared/footer", locals: { user: @user } %>

<script>
$('.ui.dropdown')
  .dropdown()
;
</script>
<script>
$('.ui.checkbox')
  .checkbox()
;
</script>

</body>
</html>
