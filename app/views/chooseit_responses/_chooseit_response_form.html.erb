<div class="ui form">


<%= form_tag chooseit_responses_path, method: :post, id: 'chooseit_response_form' do %>
  <%= hidden_field_tag 'chooseit[id]', @chooseit.id %>



      <%= render partial: 'chooseits/chooseit_choice', collection: @chooseit.chooseit_choices, as: :option %>

      <% if current_or_guest_user.voted_for?(@chooseit) && current_or_guest_user.id != @chooseit.user_id %>
        <p> You have already voted fo this one!</p>
      <% else %>

         <%= submit_tag 'ChooseIT', class: 'button' %>
      <% end %>

<% end %>

</div>

